.topnav.fixed-top.header-area
  = link_to 'Home', root_path, class: "active hover-gray none-underline-link"
  = link_to 'Blog Posts', root_path, class: "hover-gray none-underline-link"
  = link_to 'New Blog Post', new_blog_post_path, class: 'hover-gray none-underline-link'
  .header-right-container
    - if current_user
      .dropdown.show
        a#dropdown-header.text-dark.dropdown-toggle aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" href="https://example.com"
          = "Hi, #{current_user.decorate.fullname}!"
        .dropdown-menu aria-labelledby="dropdown-header"
          = link_to 'Log out', sessions_path, method: :delete, class: 'text-dark m-0 dropdown-item'

    - else
      = link_to('Sign up', new_registrations_path, class: 'btn btn-primary')
      = link_to('Sign in', new_sessions_path, class: 'btn btn-light text-dark')
